<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796b</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MoviDetailsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#37474f</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for text showing no network, empty textview, no bookmark -->
    <style name="StateTellingTextViewsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#37474f</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
